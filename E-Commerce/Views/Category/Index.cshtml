                                      
                                @*Category index*@


@using ServiceLayer.ViewModels;

@model IEnumerable<CategoryViewModel>
<div class="table-responsive container-fluid">
    <table class="table   table-hover table-sm">
        <thead><tr><th>name</th> <th>delete</th></tr></thead>
   <tbody>
    @foreach (var item in Model)
   {
       <tr><td>@item.name</td> <td><a asp-action="Delete" asp-controller="Category" asp-route-id="@item.id" class="btn btn-danger">Delete</a></td></tr>
   }
   </tbody>
    </table>
    </div>
    <div class="mb-3 bg-soft-info p-3  mt-2">
<partial name="_allcat"  model="new CategoryViewModel()"/>
</div>